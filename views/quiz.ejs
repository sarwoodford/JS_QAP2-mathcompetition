<!-- Add the header ejs template to get our CSS loaded -->
<%- include('partials/header') %>

    <!-- Display question or whatever else here -->
    <h1>Math Quiz</h1>
    <p>Answer the question below:</p>
    <!-- display question -->
    <p>
        what is <%= question.num1 %> <%= question.operator %> <%= question.num2 %> ?
    </p>

    <form action="/quiz" method="POST">
        <!-- This handles sending the user's answer back to the server. It's not recommended you modify this, as you shouldn't need to -->
        <label for="answer">Your Answer:</label>
        <input type="text" id="answer" name="answer" required>
        <button type="submit">Submit</button>
    </form>

    <form action="/" method="POST">
        <button type="submit">Exit Quiz</button>
    </form>
</body>
</html>